{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["es2020"],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "build"
    },
    "include": ["src/**/*"]
}
